<%- model_class = Sala -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-bar-chart-o fa-fw"></i> Area Chart Example
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="container">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:id) %></th>
              <th><%= model_class.human_attribute_name(:nome) %></th>
              <th><%= model_class.human_attribute_name(:numero) %></th>
              <th><%= model_class.human_attribute_name(:andar) %></th>
              <th><%#= model_class.human_attribute_name(:created_at) %></th>
              <th><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @salas.each do |sala| %>
              <tr>
                <td><%= link_to sala.id, sala_path(sala) %></td>
                <td><%= sala.nome %></td>
                <td><%= sala.numero %></td>
                <td><%= sala.andar %></td>
                <td><%#=l sala.created_at %></td>
                <td>
                  <%= link_to "Editar", edit_sala_path(sala), :class => 'btn btn-default btn-xs' %>
                  <%= link_to "Excluir", sala_path(sala), :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= link_to "Novo", new_sala_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

