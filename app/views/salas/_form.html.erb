<div class="col-lg-11">
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-bar-chart-o fa-fw"></i> Area Chart Example
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="container">
        <%= form_for @sala, :html => { :class => "form-horizontal sala" } do |f| %>

          <% if @sala.errors.any? %>
            <div id="error_expl" class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@sala.errors.count, "error") %> prohibited this sala from being saved:</h3>
              </div>
              <div class="panel-body">
                <ul>
                <% @sala.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :nome, :class => 'control-label' %>
            <%= f.text_field :nome, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :numero, :class => 'control-label' %>
            <%= f.text_field :numero, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :andar, :class => 'control-label' %>
            <%= f.text_field :andar, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to "Cancelar", salas_path, :class => 'btn btn-default' %>
          </div>

        <% end %>
      </div>
    </div>
    <!-- /.panel-body -->
  </div>
</div>