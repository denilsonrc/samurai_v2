<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Grade de equipamentos</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Grade de equipamentos
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row"> 
          <%- @equipamentos.each do |e| %>
            <%= link_to(e) do %>
              <div class="col-md-2"> 
                  <span class="fa-stack fa-4x">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-desktop fa-stack-1x fa-inverse"></i>
                  </span>
                <h3><%= e.nome %></h3> 
                <% if !e.historico_equipamentos.last.nil? %>
                  <p><strong>Status: </strong><%= e.historico_equipamentos.last.status %></p>
                <% else %>
                  <p><strong>Status: </strong>Sem registro</p>
                <% end %>
                <p><strong>Tipo: </strong><%= e.tipo.nome if !e.tipo.nil? %></p>
              </div>
            <% end %>
          <% end %>
        </div>  
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
