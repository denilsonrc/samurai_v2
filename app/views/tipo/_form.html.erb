<div class="col-lg-11">
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-bar-chart-o fa-fw"></i> 
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="container">

        <%= form_for @tipo, :html => { :class => "form-horizontal tipo" } do |f| %>
          
          <% if @tipo.errors.any? %>
            <div id="error_expl" class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@tipo.errors.count, "error") %>, registro n√£o salvo:</h3>
              </div>
              <div class="panel-body">
                <ul>
                <% @tipo.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            </div>
          <% end %>
          
          <div class="form-group">
            <%= f.label :nome, :class => 'control-label' %>
            <%= f.text_field :nome, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to "Cancelar", new_equipamento_path, :class => 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>