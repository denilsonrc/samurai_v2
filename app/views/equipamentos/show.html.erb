<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Registros do equipamento</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-2 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Dados do equipamento
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row">
          <div class="container">
            <dl class="dl-vertical">
              <dt><strong>Nome: </strong></dt>
              <dd><%= @equipamento.nome %></dd>
              <dt><strong>Status: </strong></dt>
              <dd><%= @equipamento.historico_equipamentos.last.status %></dd>
              <dt><strong>Tipo: </strong></dt>
              <dd><%= @equipamento.tipo.nome %></dd>
            </dl>
          </div>
        </div>  
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <div class="col-lg-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Grafico de tempo de resposta do dispositivo
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= area_chart @equipamento.historico_equipamentos.map { |he|  [he.created_at,he.tempo.to_i] }%>  
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <div class="col-lg-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-bar-chart-o fa-fw"></i> Grafico de quantidade do status do dispositivo
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= pie_chart [["ligado",@equipamento.status_por_numero_de_registro("ligado")],["desligado",@equipamento.status_por_numero_de_registro("desligado")]],xtitle: "Time", ytitle: "Population", min: 900 %>  
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
