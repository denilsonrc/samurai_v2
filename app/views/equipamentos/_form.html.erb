<div class="col-lg-11">
  <%= form_for @equipamento, :html => { :class => "form-horizontal equipamento" } do |f| %>
  
  <% if @equipamento.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@equipamento.errors.count, "error") %> prohibited this equipamento from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @equipamento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-desktop fa-fw"></i> Formulario de equipamentos
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="container">
        <div class="form-group">
            <%= f.label :nome, :class => 'control-label' %>
            <%= f.text_field :nome, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :ip, :class => 'control-label' %>
            <%= f.text_field :ip, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :protocolo, :class => 'control-label' %>
            <%= f.text_field :protocolo, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= link_to "Adicionar protocolo", new_tipo_path, :class => 'btn btn-success' %>
          </div>
          <div class="form-group">
            <%= f.label :sala_id, :class => 'control-label' %>
            <%= select(:equipamento, :sala_id, Sala.all.collect {|s| [ s.nome, s.id ] }, {prompt: 'Selecione a sala'}, :class=>'form-control') %>
          </div>
          <div class="form-group">
            <%= link_to "Adicionar sala", new_sala_path, :class => 'btn btn-success' %>
          </div>
          <div class="form-group">
            <%= f.label :tipo_id, :class => 'control-label' %>
            <%= select(:equipamento, :tipo_id, Tipo.all.collect {|t| [ t.nome, t.id ] }, {prompt: 'Selecione o tipo'}, :class=>'form-control') %>
          </div>
          <div class="form-group">
            <%= link_to "Adicionar tipo", new_tipo_path, :class => 'btn btn-success' %>
          </div>
          <div class="form-group">
            <%= f.label :descricao, :class => 'control-label' %>
            <%= f.text_area :descricao, :class => 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to "Cancelar", equipamentos_path, :class => 'btn btn-default' %>
          </div>
      </div>
    </div>
  </div>
  <% end %>
</div>