<%- model_class = Equipamento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-bar-chart-o fa-fw"></i> Area Chart Example
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <div class="container">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:id) %></th>
              <th><%= model_class.human_attribute_name(:nome) %></th>
              <th><%= model_class.human_attribute_name(:protocolo) %></th>
              <th><%= model_class.human_attribute_name(:ip) %></th>
              <th><%= model_class.human_attribute_name(:sala_id) %></th>
              <th><%= model_class.human_attribute_name(:tipo_id) %></th>
              <th><%= model_class.human_attribute_name(:descricao) %></th>
              <th><%=t '.actions', :default => t("helpers.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @equipamentos.each do |equipamento| %>
              <tr>
                <td><%= link_to equipamento.id, equipamento_path(equipamento) %></td>
                <td><%= equipamento.nome %></td>
                <td><%= equipamento.protocolo %></td>
                <td><%= equipamento.ip %></td>
                <td><%= equipamento.sala.nome %></td>
                <td><%= equipamento.tipo.nome %></td>
                <td><%= equipamento.descricao %></td>
                <td>
                  <%= link_to "Editar", edit_equipamento_path(equipamento), :class => 'btn btn-default btn-xs' %>
                  <%= link_to "Excluir", equipamento_path(equipamento), :method => :delete,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-xs btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= link_to "Novo", new_equipamento_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>